<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/StrongBlue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/TitleTextSize"
            android:textColor="@color/White"
            android:text="Todo"
            android:textStyle="bold" />
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            local:MvxBind="Click CreateNewCommand"
            android:padding="@dimen/TitleTextSize">
            <ImageView
                android:src="@drawable/add"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <MvvmCross.Platforms.Android.Binding.Views.MvxListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            local:MvxBind="ItemsSource Users; ItemClick ItemSelectedCommand"
            local:MvxItemTemplate="@layout/useritem" />
    </FrameLayout>
</LinearLayout>